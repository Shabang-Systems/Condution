{
  "name": "Condution",
  "version": "1.0.2",
  "main": "main.js",
  "postinstall": {
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shabang-Systems/Condution.git"
  },
  "author": "Shabang Systems, and the Condution Authors",
  "license": " LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Shabang-Systems/Condution/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "Tasks? Done. That was quick.",
  "build": {
    "extends": null,
    "appId": "cf.shabang.condution",
    "productName": "Condution",
    "copyright": "Copyright Â© 2021 Shabang Systems, LLC and the Condution Project Contributors.",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "identity": "Shabang Systems, LLC (9TEPY3US76)",
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": "nsis"
    },
    "afterSign": "./resources/buildscripts/aftersign.js"
  },
  "devDependencies": {
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.5"
  }
}
